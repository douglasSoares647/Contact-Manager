<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="contatos.treinamento.com.br.contatos" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="ANDROID.PERMISSION.INTERNET"></uses-permission>
    <uses-permission android:name="ANDROID.PERMISSION.CALL_PHONE"></uses-permission>
    <application
        android:allowBackup="true"
        android:name=".model.ContactManagerApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".controller.activity.ContactListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.activity.ContactInformationActivity">
        </activity>
        <activity android:name=".controller.activity.ContactFormActivity"
            android:label="@string/bar_new_contact">
        </activity>
    </application>

</manifest>
